rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /tests/{test} {
      allow read, write: if request.auth != null;
    }
    match /pollution_tests/{test} {
      allow read, write: if request.auth != null;
    }
    match /users/{user} {
      allow read, write: if request.auth != null;
    }
    match /staff/{member} {
      allow read, write: if request.auth != null;
    }
    match /admins/{admin} {
      allow read: if request.auth != null;
      allow write: if false; // Only manageable via console manually for security
    }
  }
}
